<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>

<AnchorPane xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="gui.ProductController">
<VBox fx:id="productContainer" maxHeight="-Infinity" prefHeight="191.0" prefWidth="174.0" style="-fx-padding: 10;">

    <ImageView fx:id="productImage" fitHeight="100.0" fitWidth="100.0" pickOnBounds="true" preserveRatio="true" style="-fx-margin: 10;" />
    <Label fx:id="productName" style="-fx-font-size: 18pt;" text="Product Name">
      <VBox.margin>
         <Insets />
      </VBox.margin></Label>
    <Label fx:id="productPrice" style="-fx-font-size: 14pt;" text="Product Price">
      <VBox.margin>
         <Insets />
      </VBox.margin></Label>
      <Button fx:id="ajouteraupanier" alignment="CENTER" mnemonicParsing="false" style="-fx-background-color: #f6b49c;" text="Ajouter au panier" textFill="WHITE">
         <VBox.margin>
            <Insets left="20.0" />
         </VBox.margin>
      </Button>
</VBox>
</AnchorPane>
